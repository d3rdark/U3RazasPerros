@model U3RazasPerros.Areas.Admin.Models.ViewModels.RazasAgregarViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Editar";
    Layout = "_LayoutAdmin";
}

<form method="post" action="~/Admin/Razas/Editar" enctype="multipart/form-data">
    <section class="formuAgregar">
        <h1>Editar raza</h1>
        <input type="hidden" id="idRaza" asp-for="Razas.Id"/>
        <label>Nombre:</label><br />
        <input type="text" id="txtnombre" required="required" asp-for="Razas.Nombre" /><br />
        <label>Descripcion:</label><br />
        <textarea rows="2" cols="20" id="txtdescripcion" required="required" asp-for="Razas.Descripcion"></textarea><br />
        <label>Otro nombre:</label><br />
        <input type="text" id="txtotronombre" required="required" asp-for="Razas.OtrosNombres" /><br />
        <label>Países:</label><br />
        <select id="cmbIdPais" asp-for="Razas.IdPais" required="required" asp-items="@(new SelectList(Model.Paises, "Id", "Nombre"))">
            <option selected="selected" value="">--Selecionar País--</option>
        </select> <br />
        <label>Peso minimo:</label> <br />
        <input type="number" step="0.01" id="txtpesominimo" asp-for="Razas.PesoMin" required="required" /> <br />
        <label>Peso Maximo:</label> <br />
        <input type="number" step="0.01" id="txtPesoMaximo" asp-for="Razas.PesoMax" required="required" /> <br />
        <label>Altura minima:</label> <br />
        <input type="number" step="0.01" id="txtAlturaMinima" asp-for="Razas.AlturaMin" required="required" /><br />
        <label>Altura Maxima:</label> <br />
        <input type="number" step="0.01" id="txtAlturaMaxima" asp-for="Razas.AlturaMax" required="required" /><br />
        <label>Esperanza de Vida:</label><br />
        <input type="number" id="txtEsperanzaVida" asp-for="Razas.EsperanzaVida" required="required" /> <br />
        <h1>Caracteristicas Fisicas</h1><br />
        <label>Patas:</label><br />
        <input type="text" id="txtPatas" asp-for="Razas.Caracteristicasfisicas.Patas" required="required" /><br />
        <label>Cola:</label><br />
        <input type="text" id="txtCola" asp-for="Razas.Caracteristicasfisicas.Cola" required="required" /><br />
        <label>Tipo de Hocico:</label><br />
        <input type="text" id="txtHocico" asp-for="Razas.Caracteristicasfisicas.Hocico" required="required" /><br />
        <label>Tipo de Pelo:</label><br />
        <input type="text" id="txtPelo" asp-for="Razas.Caracteristicasfisicas.Pelo" required="required" /><br />
        <label>Color de Perro:</label><br />
        <input type="text" id="txtColor" asp-for="Razas.Caracteristicasfisicas.Color" required="required" /><br />
        <label>Imagen:</label>
        <input type="file" id="fileUpload1" name="archivo1" accept="image/jpg" />
        <img id="imagePreview" src="~/imgs_perros/@(Model.Razas.Id)_0.jpg" alt="Vista previa de la imagen" />

    </section>

    <div class="botenes">
        <p id="error">
            @Html.ValidationSummary()
        </p>
        <input class="button" type="submit" value="Guardar" id="btnGuardar" />
        <a href="javascript:history.back();" class="button">Regresar</a>
    </div>
</form>
<script>
    function mostrarImagen(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                document.querySelector('#imagePreview').src = e.target.result;
            }
            reader.readAsDataURL(input.files[0])
        }
    }


    document.querySelector('#fileUpload1').addEventListener("change", event => {
        mostrarImagen(event.target)
    });
</script>
